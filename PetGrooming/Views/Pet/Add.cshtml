@model  List<PetGrooming.Models.Species>
@{
    ViewBag.Title = "Add";
}

<h2>Add a New Pet</h2>

<form method="POST" action="/Pet/Add">

    <div><span>Name:</span></div><div><input id="PetName" type="text" name="PetName" /></div><br />
    <div>
        <span>Species:</span><br />
        <select id="SpeciesID" type="text" name="SpeciesID">
            @{ 
                //A rendering loop for presenting a list of species
                //The pet should be one of these species
                foreach(var species in Model)
                {
                    <option value="@species.SpeciesID">@species.Name</option>

                }
            }
        </select><br /><br />
    </div>
    <div><span>Weight (kg):</span></div><div><input id="PetWeight" type="text" name="PetWeight" /></div><br />
    <div><span>Color:</span></div><div><input id="PetColor" type="text" name="PetColor" /></div><br />
    <div>Notes:</div>
    <textarea id="PetNotes" name="PetNotes"></textarea><br /><br />
    <input type="submit" value="Add Pet">
</form>
